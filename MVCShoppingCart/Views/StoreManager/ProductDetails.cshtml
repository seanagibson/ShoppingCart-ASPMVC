<hr />

<div class="container">
    <h4>Product Images</h4>
    @Html.ActionLink("Add Product Image", "ImageUpload", new { id = Model.ProductId })
    @foreach (var productImage in Model.Images)
    {
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <img src="@Url.Content(productImage.ImagePath)"/>
            </div>
        </div>
    }
</div>
<p>
